@model BadReports
@{ 
    ViewBag.Title = ViewBag.Action + " reports";
}

<h2>@ViewBag.Title</h2>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="LicenseeID">Posting Licensee</label>
        <select asp-for="LicenseeID" class="form-control">
            <option value="">Select posting licensee</option>
            @foreach (PostingLicensee postingLicensee in ViewBag.PostingLicensees)
            {
                <option value="@postingLicensee.LicenseeID">@postingLicensee.LicenseeName</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label asp-for="CoinAddress">Wallet Address</label>
        <input asp-for="CoinAddress" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Hash">Transaction Hash</label>
        <input asp-for="Hash" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="FirstName">First Name</label>
        <input asp-for="FirstName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="LastName">Last Name</label>
        <input asp-for="LastName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="DOB">Owner DOB</label>
        <input asp-for="DOB" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="CurrencyID">Currency Used</label>
        <select asp-for="CurrencyID" class="form-control">
            <option value="">Select currency used</option>
            @foreach (Cryptocurrency cryptocurrency in ViewBag.Cryptocurrencys)
            {
                <option value="@cryptocurrency.CurrencyID">@cryptocurrency.Code</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label asp-for="CategoryID">Category</label>
        <select asp-for="CategoryID" class="form-control">
            <option value="">Select category</option>
            @foreach (Category category in ViewBag.Categorys)
            {
                <option value="@category.CategoryID">@category.Crime</option>
            }
        </select>
    </div>


    <div class="form-group">
        <label asp-for="IPAddress">IP Address</label>
        <input asp-for="IPAddress" class="form-control" />
    </div>

    <input type="hidden" asp-for="uid" />

    <button type="submit" class="btn btn-primary">@ViewBag.Action</button>
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Cancel</a>
</form>